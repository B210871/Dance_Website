extends base.pug

block script
      script
          script(src="/static/script.css")

block style
      style 
          include ../static/style.css
      style 
          include ../static/stylecontact.css
          

block content
  div.box
    h1 Contact Us
    form(action="/contact", method="post" class="container") 
       input(type="text" name="name"  placeholder="Enter your name")
       input(type="text" name="age"  placeholder="Enter your age")
       input(type="text" name="gender"  placeholder="Enter your gender")
       input(type="textarea", name="address", placeholder="Enter your address") 
       input(type="textarea", name="more", placeholder="More about you")
       button.btn submit 